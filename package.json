{
  "name": "dom-serialize-issue",
  "version": "0.1.0",
  "description": "Minimal Stencil repro for Serializaion crash starting in Stencil 4.36.0 (works in 4.35.2)",
  "scripts": {
    "build": "stencil build --dev",
    "serve": "npx http-server www -c-1 -p 3333",
    "percy": "npm run build && percy snapshot snapshots.yaml",
    "playwright:codegen": "npx playwright codegen http://localhost:3333",
    "playwright:test": "npm run build && npx playwright test",
    "playwright:report": "npx playwright show-report",
    "use:stencil:4352": "npm install @stencil/core@4.35.2 --no-save",
    "use:stencil:4360": "npm install @stencil/core@4.36.0 --no-save",
    "use:stencil:4400": "npm install @stencil/core@4.40.0 --no-save"
  },
  "devDependencies": {
    "@percy/cli": "^1.31.7",
    "@playwright/test": "^1.50.1",
    "@stencil/core": "^4.40.0",
    "http-server": "^14.1.1",
    "typescript": "~5.5.4"
  }
}
